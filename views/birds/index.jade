doctype html
html
  extends ../layout
  append main
    h1.
      Add New Bird
    a(href='/birds/new') New Bird
    h1.
         #{title}
    ul
        - each bird, i in birds
            li Bird: #{bird.birdname} Color: #{bird.birdcolor} Id: #{bird._id}
                form(action='/birds/#{bird._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
                p
                    a(href='/birds/#{bird._id}/edit') Edit
                p
                    a(href='/birds/#{bird._id}') Show
